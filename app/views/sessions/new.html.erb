<% content_for(:title) { "Sign in" } %>
<% turbo_page_requires_reload %>

<div class="flex items-center h-screen">
  <div class="card w-[500px] bg-base-100 shadow-xl">
    <div class="card-body">
      <%= form_with url: session_path, class: "flex flex-col gap-6 justify-between"  do |form| %>
        <div class="w-[11rem] h-[5rem] self-center" style="background: url(<%= image_path("logo.png")%>) no-repeat 0.1rem center/11rem"></div>

        <%= form.label :email, class: "input input-lg w-full flex items-center gap-2 text-xl" do %>
          <%= icon("at-symbol", class: "size-7 opacity-50") %>
          <%= form.email_field :email, placeholder: "Enter your email address", required: true, autofocus: true, autocomplete: "username", class: "grow", value: params[:email] %>
        <% end %>

        <%= form.label :password, class: "input input-lg w-full flex items-center gap-2 text-xl" do %>
          <%= icon("key", class: "size-7 opacity-50") %>
          <%= form.password_field :password, placeholder: "Enter your password", autocomplete: "current-password", maxlenght: 72, required: true, class: "grow" %>
        <% end %>

        <div class="card-actions justify-center">
          <%= form.button(
            nil,
            class: "btn btn-secondary btn-xl btn-circle btn-hover-scale-up",
          ) do %>
            <%= icon("arrow-right", class: "size-7 stroke-4 text-white") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

