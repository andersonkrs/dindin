<div class="min-h-screen flex items-center justify-center">
  <%= form_with(model: @user, url: sessions_path, method: :post) do |form| %>
    <div class="card w-96 bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title justify-center">Dindin</h2>

        <%= form.label :email, class: "input input-bordered flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0Zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 1 0-2.636 6.364M16.5 12V8.25" />
          </svg>
          <%= form.text_field :email, placeholder: "Email", required: true, class: "grow" %>
        <% end %>

        <%= form.label :password, class: "input input-bordered flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z" />
          </svg>
          <%= form.password_field :password, placeholder: "Password", required: true, class: "grow" %>
        <% end %>

        <div class="card-actions justify-center">
          <%= form.submit("Login", class: "btn btn-primary") %>
        </div>
      </div>
    </div>
  <% end %>
</div>
