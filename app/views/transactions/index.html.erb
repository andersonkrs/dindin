        </svg>
        New Expense
      <% end %>
    </div>

    <table class="table">
      <thead>
        <th>Title</th>
        <th class="text-right">Value</th>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <%= render transaction %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
