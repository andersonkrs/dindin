<tr id="<%= dom_id transaction %>">
  <td>
    <div class="flex items-center gap-3">
      <div class="avatar placeholder">
        <div class="bg-neutral text-neutral-content rounded-full w-12">
          <span class="text-xs"><%= transaction.category.title.chars.values_at(0, -1).map(&:upcase).join %></span>
        </div>
      </div>
      <div> 
        <div class="font-bold"><%= transaction.title %></div>
        <div class="text-sm opacity-50"><%= transaction.category.title %></div>
      </div>
    </div>
  </td>
  <td class="text-right font-bold text-md <%= class_names("text-emerald-500" => false, "text-red-600" => true) %>">
    <%= "-" %><%= humanized_money_with_symbol(transaction.value) %>
  </td>
</tr>
