<%= turbo_stream.prepend dom_id(Transaction, :list) do %>
  <%= render "transactions/transaction", transaction: @transaction %>
<% end %>

<%= turbo_stream.replace dom_id(Transaction, :form) do %>
  <%= turbo_frame_tag dom_id(Transaction, :form), data: { transactions_dialog_target: "frame" } do %>
    <%= render "transactions/form", transaction: Expense.new(**@transaction.slice(:due_on, :account)) %>
  <% end %>
<% end %>

<%= turbo_stream.replace(:flash, partial: "shared/notifications") %>
