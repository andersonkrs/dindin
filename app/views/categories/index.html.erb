<% content_for :title, "Categories" %>

<div class="card bg-base-100 rounded-2xl shadow-2xl w-full md:w-2/3">
  <div class="card-body px-2 py-2">
    <div class="flex items-center justify-end w-full px-2">
      <%= link_to new_category_path(kind: :expense), role: "button", class: "btn font-medium btn-sm rounded-[3rem] btn-outline btn-accent" do %>
        <%= icon "plus" %>
        New
      <% end %>
    </div>
    <div class="max-sm:divider-start divider text-2xl md:text-4xl font-bold mx-5 my-1">
      <%= icon "chart-pie", class: "size-16 md:size-32" %>Categories
    </div>
    <div class="flex flex-col w-full pt-0 px-1 md:px-10 py-5">
      <% @categories.each do |category| %>
        <%= render "categories/category", category: category %>
      <% end %>
    </div>
  </div>
</div>
